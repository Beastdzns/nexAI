{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "@nexai/echelon-sdk#build": {
      "cache": true,
      "outputs": ["dist/**"]
    },
    "build": {
      "dependsOn": ["^@nexai/echelon-sdk#build"],
      "inputs": [".env"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "dev": {
      "dependsOn": ["^@nexai/echelon-sdk#build"],
      "inputs": [".env"]
    }
  }
}
